<%- include('partials/header') %>
<div class="container">
    <form action="/createNewLoan" method="POST">

        <div class="form-group">
            <label for="client_id">Client ID</label>
            <input type="text" value="<%id%>" placeholder="<%id%>" class="form-control" id="client_id" name="client_id" disabled required>
        </div>
        <div class="form-group">
            <label for="desired_interest_rate">Desired Interest Rate</label>
            <input type="text" class="form-control" placeholder="Based on your salary" id="desired_interest_rate" name="desired_interest_rate" required>
        </div>
        <div class="form-group">
            <label for="repayment_plan">Repayment Plan</label>
            <input type="number" class="form-control" placeholder="In monthes" id="repayment_plan" name="repayment_plan" required>
        </div>
        
        <button style="margin-top: 1em;" type="submit" class="btn btn-primary">Create Loan</button>
    </form>
</div>
<%- include('partials/footer') %>
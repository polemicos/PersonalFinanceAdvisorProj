<%- include('partials/header') %>
<div class="container">
    <form action="/loans" method="POST">

        <div class="form-group">
            <label for="client_id">Client ID</label>
            <input type="text" class="form-control" id="client_id" name="client_id" required>
        </div>
        <div class="form-group">
            <label for="desired_interest_rate">Desired Interest Rate</label>
            <input type="text" class="form-control" id="desired_interest_rate" name="desired_interest_rate" required>
        </div>
        <div class="form-group">
            <label for="max_loan_amount">Max Loan Amount</label>
            <input type="number" class="form-control" id="max_loan_amount" name="max_loan_amount" required>
        </div>
        <div class="form-group">
            <label for="repayment_plan">Repayment Plan</label>
            <input type="text" class="form-control" id="repayment_plan" name="repayment_plan" required>
        </div>
        <div class="form-group">
            <label for="total_interest_paid">Total Interest Paid</label>
            <input type="number" class="form-control" id="total_interest_paid" name="total_interest_paid" required>
        </div>
        <button style="margin-top: 1em;" type="submit" class="btn btn-primary">Create Loan</button>
    </form>
</div>
<%- include('partials/footer') %>
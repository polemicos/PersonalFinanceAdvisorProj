
<%- include('partials/header') %>
<div class="container">
    <form action="/register" method="post">
       
            
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" class="form-control" id="username" placeholder="Joe2024" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" class="form-control" id="password" required>
      </div>
      <div class="mb-3">
          <label for="salary" class="form-label">Salary per annum</label>
          <input name="salary" class="form-control" id="salary" placeholder="60000" required>
        </div>
        <div class="mb-3">
            <select class="form-select" aria-label="Default" name="preferred_currency_id" required>
                <option selected>Open this select menu</option>
                <% Object.keys(currencyList).forEach((key) => { %>
                    <option value="<%= key %>"><%= currencyList[key] %></option>
                    <% }); %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
<%- include('partials/footer') %>